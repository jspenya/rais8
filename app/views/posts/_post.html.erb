<div id="<%= dom_id post %>" class="post-card">
  <h2><%= post.title %></h2>
  <div class="post-content">
    <%= post.content %>
  </div>
  <div class="post-actions">
    <%= link_to "Show", post_path(post), class: "btn btn-sm btn-info" %>
    <%= link_to "Edit", edit_post_path(post), class: "btn btn-sm btn-warning" %>
    <%= button_to "Delete", post_path(post), method: :delete, class: "btn btn-sm btn-danger", form: { data: { turbo_confirm: "Are you sure?" } } %>
  </div>
</div>