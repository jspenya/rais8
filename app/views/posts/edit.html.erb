<h1>Edit Post</h1>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <%= render "form", post: @post %>
      </div>
    </div>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Show", @post, class: "btn btn-info" %>
  <%= link_to "Back to posts", posts_path, class: "btn btn-secondary" %>
</div>
