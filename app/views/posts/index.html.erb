<h1>Blog Posts</h1>

<div class="row mb-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2>New Post</h2>
      </div>
      <div class="card-body">
        <%= render "form", post: @post %>
      </div>
    </div>
  </div>
</div>

<div id="posts">
  <%= render @posts %>
</div>
